#include <iostream>
using namespace std;
float diameter(float r){
	float d = 2*r;
	return d;
}
float circumference(float r){
	float c = 2*3.14*r;
	return c;
}
float area(float r){
	float a = 3.14 * r * r;
	return a;
}
int main() {
	float r, c, a;
	cout << "Enter the radius\n";
	cin >> r;
	c = circumference(r);
	a = area(r);
